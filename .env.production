# Production Environment Configuration

# Database - Production Supabase PostgreSQL
DATABASE_URL="postgresql://postgres:PRODUCTION_PASSWORD@db.supabase.co:5432/postgres"

# Supabase Configuration (Production)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-production-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-production-service-role-key"

# Authentication (Production)
NEXTAUTH_SECRET="your-production-secret-64-chars-minimum-for-security"
NEXTAUTH_URL="https://your-domain.com"

# OAuth Providers (Production)
GOOGLE_CLIENT_ID="your-production-google-client-id"
GOOGLE_CLIENT_SECRET="your-production-google-client-secret"
GITHUB_CLIENT_ID="your-production-github-client-id"
GITHUB_CLIENT_SECRET="your-production-github-client-secret"

# Redis (Production - managed service recommended)
REDIS_URL="redis://your-production-redis:6379"

# Monitoring (Production)
LOG_LEVEL="warn"
NODE_ENV="production"

# AI Integration (Production)
OPENROUTER_API_KEY="your-production-openrouter-key"

# Performance Monitoring
VERCEL_ANALYTICS_ID="your-vercel-analytics-id"
SENTRY_DSN="your-production-sentry-dsn"

# Security Headers
CSP_REPORT_URI="https://your-domain.com/api/security/csp-report"