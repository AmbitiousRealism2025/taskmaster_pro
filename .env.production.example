# TaskMaster Pro - Production Environment Configuration
# Copy this file to .env.production and fill in the values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://taskmaster-pro.com
NEXT_TELEMETRY_DISABLED=1

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# Authentication
NEXTAUTH_URL=https://taskmaster-pro.com
NEXTAUTH_SECRET=your-nextauth-secret-minimum-32-characters
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_ID=your-github-id
GITHUB_SECRET=your-github-secret

# Redis (Upstash or self-hosted)
REDIS_URL=redis://localhost:6379
REDIS_TOKEN=your-redis-token

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Logging
LOG_LEVEL=info
LOGS_DIR=/app/logs

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Performance Monitoring
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your-vercel-analytics-id
LHCI_GITHUB_APP_TOKEN=your-lighthouse-ci-token

# Security
CSRF_PROTECTION=enabled
RATE_LIMIT_ENABLED=true
CSP_ENABLED=true

# External Services
OPENAI_API_KEY=your-openai-api-key
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# File Storage
NEXT_PUBLIC_STORAGE_BUCKET=your-storage-bucket
STORAGE_ACCESS_KEY=your-storage-access-key
STORAGE_SECRET_KEY=your-storage-secret-key

# Feature Flags
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_OFFLINE_MODE=true
FEATURE_AI_INSIGHTS=true

# Development/Debug (set to false in production)
NEXT_PUBLIC_DEBUG=false
ENABLE_SOURCE_MAPS=false
ANALYZE_BUNDLE=false